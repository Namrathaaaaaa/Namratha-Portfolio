pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    triggers {
        githubPush()
    }

    environment {
        IMAGE_NAME = "namratha3/portfolio"
        EMAIL_TO = "namratha343@gmail.com"
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'git-cred',
                    url: 'https://github.com/Namrathaaaaaa/Namratha-Portfolio.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                }
            }
        }

        stage('Build & Push Docker Image (AMD64)') {
            steps {
                script {
                    env.IMAGE_TAG = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()

                    sh """
                    # Enable buildx (no error if already exists)
                    docker buildx create --use || true
                    docker buildx inspect --bootstrap

                    # Build for AMD64 so Kubernetes can run it
                    docker buildx build \
                        --platform linux/amd64 \
                        -t ${IMAGE_NAME}:latest \
                        -t ${IMAGE_NAME}:${IMAGE_TAG} \
                        --push .
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                docker run --rm \
                -v /root/.kube:/root/.kube \
                bitnami/kubectl:latest \
                kubectl set image deployment/portfolio-deploy \
                portfolio=${IMAGE_NAME}:${IMAGE_TAG} \
                -n portfolio
            """

                sh """
                docker run --rm \
                -v /root/.kube:/root/.kube \
                bitnami/kubectl:latest \
                kubectl rollout status deployment/portfolio-deploy -n portfolio
             """
             }
        }

    post {

        success {
            emailext(
                attachLog: false,
                subject: "SUCCESS: Portfolio Deployed Successfully! üéâ",
                body: """
Hi Nam,

Your Jenkins CI/CD pipeline completed successfully!

‚úî Image built (AMD64)  
‚úî Image pushed to DockerHub  
‚úî Kubernetes deployment updated  
‚úî Rollout completed  

Deployed Tag: ${env.IMAGE_TAG}

Everything looks good!
""",
                to: "${EMAIL_TO}"
            )
        }

        failure {
            emailext(
                attachLog: true,
                subject: "FAILURE: Portfolio Deployment Failed ‚ùå",
                body: """
Hi Nam,

Your CI/CD pipeline FAILED.

Please check the Jenkins build logs for details.

Regards,  
Jenkins
""",
                to: "${EMAIL_TO}"
            )
        }
    }
}
