pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    triggers {
        githubPush()
    }

    environment {
        IMAGE_NAME = "namratha3/portfolio"
        EMAIL_TO = "namratha343@gmail.com"
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'git-cred',
                    url: 'https://github.com/Namrathaaaaaa/Namratha-Portfolio.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                }
            }
        }

        stage('Build & Push Docker Image (AMD64 + latest tag)') {
            steps {
                script {
                    env.IMAGE_TAG = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()

                    sh """
                    docker buildx create --use || true
                    docker buildx inspect --bootstrap

                    # Build and push latest tag for ArgoCD auto-sync
                    docker buildx build \
                        --platform linux/amd64 \
                        -t ${IMAGE_NAME}:latest \
                        -t ${IMAGE_NAME}:${IMAGE_TAG} \
                        --push .
                    """
                }
            }
        }
    }

    post {

        success {
            emailext(
                attachLog: false,
                subject: "SUCCESS: Portfolio Image Pushed! üéâ",
                body: """
Hi Nam,

Your Jenkins CI pipeline completed successfully!

‚úî Built AMD64 Docker image  
‚úî Pushed :latest + commit tag  
‚úî ArgoCD will now automatically deploy it  

Tag pushed: ${env.IMAGE_TAG}

Regards,  
Jenkins üß°
""",
                to: EMAIL_TO
            )
        }

        failure {
            emailext(
                attachLog: true,
                subject: "FAILURE: Portfolio Image Build Failed ‚ùå",
                body: """
Hi Nam,

Your Jenkins pipeline FAILED.

Please check the logs for details.

Regards,  
Jenkins
""",
                to: EMAIL_TO
            )
        }
    }
}
