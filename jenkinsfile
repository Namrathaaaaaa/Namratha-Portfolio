pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    triggers {
        githubPush()
    }

    environment {
        IMAGE_NAME = "namratha3/portfolio"
        EMAIL_TO = "namratha343@gmail.com"
    }

    stages {

        stage("Git Checkout") {
            steps {
                git branch: 'main',
                    credentialsId: 'git-cred',
                    url: 'https://github.com/Namrathaaaaaa/Namratha-Portfolio.git'
            }
        }

        stage("Install Dependencies") {
            steps {
                sh "npm install"
            }
        }

        stage("Build App") {
            steps {
                sh "npm run build"
            }
        }

        stage("Docker Login") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                }
            }
        }

        stage("Build & Push Docker Image (AMD64 + latest)") {
            steps {
                script {
                    env.IMAGE_TAG = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()

                    sh """
                    # Ensure a persistent amd64 builder
                    docker buildx use portfolio-builder || docker buildx create --name portfolio-builder --driver docker-container --use
                    docker buildx inspect --bootstrap

                    # Build and push amd64 image
                    docker buildx build \
                        --platform linux/amd64 \
                        -t ${IMAGE_NAME}:latest \
                        -t ${IMAGE_NAME}:${IMAGE_TAG} \
                        --push .
                    """
                }
            }
        }
    }

    post {

        success {
            emailext(
                attachLog: false,
                subject: "SUCCESS: Portfolio Image Pushed! üéâ",
                body: """
Hi Nam,

Your Jenkins CI pipeline ran successfully! üöÄ

‚úî App built  
‚úî Docker image (AMD64) built  
‚úî :latest + commit tag pushed to DockerHub  
‚úî ArgoCD will now automatically deploy the new version  

Tag pushed: ${env.IMAGE_TAG}

‚Äì Jenkins üß°
""",
                to: EMAIL_TO
            )
        }

        failure {
            emailext(
                attachLog: true,
                subject: "FAILURE: Portfolio Build Failed ‚ùå",
                body: """
Hi Nam,

The Jenkins pipeline FAILED.
Please check the Jenkins logs for details.

‚Äì Jenkins
""",
                to: EMAIL_TO
            )
        }
    }
}
