pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    triggers {
        githubPush()
    }

    environment {
        IMAGE_NAME = "namratha3/portfolio"
        EMAIL_TO = "namratha343@gmail.com"
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'main', 
                    credentialsId: 'git-cred', 
                    url: 'https://github.com/Namrathaaaaaa/Namratha-Portfolio.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm i'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    env.IMAGE_TAG = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()

                    sh """
                    docker build -t ${IMAGE_NAME}:latest .
                    docker tag ${IMAGE_NAME}:latest ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh """
                docker push ${IMAGE_NAME}:latest
                docker push ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                kubectl set image deployment/portfolio-deploy \
                    portfolio=${IMAGE_NAME}:${IMAGE_TAG} \
                    -n portfolio

                kubectl rollout status deployment/portfolio-deploy -n portfolio
                """
            }
        }
    }

    post {

        success {
            emailext(
                attachLog: false,
                subject: "SUCCESS: Portfolio Deployed Successfully!",
                body: """
Hi Nam,

Your Jenkins CI/CD pipeline completed successfully! üéâ

‚úî Docker image built  
‚úî Image pushed to DockerHub  
‚úî Kubernetes deployment updated  
‚úî Rollout completed  

Deployed Tag: ${env.IMAGE_TAG}

Good job!
""",
                to: "${EMAIL_TO}"
            )
        }

        failure {
            emailext(
                attachLog: true,
                subject: "FAILURE: Portfolio Deployment Failed ‚ùå",
                body: """
Hi Nam,

Your CI/CD pipeline FAILED.

Please check the attached Jenkins build log.

- Jenkins
""",
                to: "${EMAIL_TO}"
            )
        }
    }
}
