pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    triggers {
        githubPush()
    }

    environment {
        IMAGE_NAME = "namratha3/portfolio"
        EMAIL_TO = "namratha343@gmail.com"
        KUBECONFIG_PATH = "/root/.kube/config"
    }

    stages {

        stage('Git Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'git-cred',
                    url: 'https://github.com/Namrathaaaaaa/Namratha-Portfolio.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-cred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                }
            }
        }

        stage('Build & Push Docker Image (AMD64)') {
            steps {
                script {
                    env.IMAGE_TAG = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()

                    sh """
                    docker buildx create --use || true
                    docker buildx inspect --bootstrap

                    docker buildx build \
                        --platform linux/amd64 \
                        -t ${IMAGE_NAME}:latest \
                        -t ${IMAGE_NAME}:${IMAGE_TAG} \
                        --push .
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {

                echo "Using kubeconfig from: ${KUBECONFIG_PATH}"

                sh """
                docker run --rm \
                  -v ${KUBECONFIG_PATH}:/kubeconfig \
                  -e KUBECONFIG=/kubeconfig \
                  bitnami/kubectl:latest \
                  set image deployment/portfolio-deploy \
                  portfolio=${IMAGE_NAME}:${IMAGE_TAG} \
                  -n portfolio
                """

                sh """
                docker run --rm \
                  -v ${KUBECONFIG_PATH}:/kubeconfig \
                  -e KUBECONFIG=/kubeconfig \
                  bitnami/kubectl:latest \
                  rollout status deployment/portfolio-deploy \
                  -n portfolio
                """
            }
        }
    }

    post {

        success {
            emailext(
                attachLog: false,
                subject: "SUCCESS: Portfolio Deployed Successfully! üéâ",
                body: """
Hi Nam,

Your Jenkins CI/CD pipeline completed successfully!

‚úî Built AMD64 Docker image  
‚úî Pushed to DockerHub  
‚úî Updated Kubernetes deployment  
‚úî Rollout completed successfully  

Tag deployed: ${env.IMAGE_TAG}

Cheers,  
Jenkins üß°
""",
                to: "${EMAIL_TO}"
            )
        }

        failure {
            emailext(
                attachLog: true,
                subject: "FAILURE: Portfolio Deployment Failed ‚ùå",
                body: """
Hi Nam,

Your CI/CD pipeline FAILED.

Please check the Jenkins logs to find the issue.

Regards,  
Jenkins
""",
                to: "${EMAIL_TO}"
            )
        }
    }
}
